<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        android:background="@android:color/holo_blue_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutColorStatus" >

            <SurfaceView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/surfaceView" />

        </LinearLayout>

        <ImageButton
            android:contentDescription="@string/instruments"
            android:id="@+id/btnInstruments"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:background="@drawable/pencils"
            android:layout_below="@+id/layoutColorStatus"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:contentDescription="@string/eraser"
            android:layout_width="69dp"
            android:layout_height="98dp"
            android:id="@+id/btnEraser"
            android:onClick="eraserOn"
            android:background="@drawable/eraser"
            android:layout_below="@+id/btnInstruments"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/drawViewLayout"
        android:background="@drawable/back">

        <org.athome.alex.katyapaint.DrawView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drawView"/>
    </LinearLayout>

</LinearLayout>